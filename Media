BetaLeftBox:AddDivider()

BetaLeftBox:AddLabel('Beta Lone Script')

BetaLeftBox:AddButton({
    Text = 'Lone Survival',
    Func = loadBetaLoneSurvivalScript
})

BetaLeftBox:AddDivider()

BetaLeftBox:AddLabel('Beta RNG Dropper Tycoon Script')

BetaLeftBox:AddButton({
    Text = 'RNG Dropper Tycoon',
    Func = loadBetaRNGDropperTycoonScript
})

BetaLeftBox:AddDivider()

BetaLeftBox:AddLabel('Beta World Mining Script')

BetaLeftBox:AddButton({
    Text = 'World Mining Script',
    Func = loadBetaWorldMiningScript
})

BetaLeftBox:AddDivider()

BetaLeftBox:AddLabel('Beta Plinko Tycoon Script')

BetaLeftBox:AddButton({
    Text = 'Plinko Tycoon',
    Func = loadBetaPlinkoTycoonScript
})
