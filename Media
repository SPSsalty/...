local function loadBetaPlinkoTycoonScript()
    local scriptUrl = "https://raw.githubusercontent.com/SPSsalty/..2../refs/heads/main/Beta"
    local success, result = pcall(function()
        loadstring(game:HttpGet(scriptUrl))()
    end)

    if not success then
        warn("Error loading the script: " .. result)
    else
        print("Plinko Tycoon script loaded successfully!")
    end

    -- Properly unload the UI
    Library:Unload()
